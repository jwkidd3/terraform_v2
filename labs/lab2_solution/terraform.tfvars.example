# Lab 2: Variables and Data Sources - Example Configuration
# terraform.tfvars.example - Copy this to terraform.tfvars and customize

# ===========================================
# REQUIRED: Set your username
# ===========================================
username = "YOUR_USERNAME_HERE"  # Change to user1, user2, user3, etc.

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
environment = "dev"        # Options: dev, staging, prod
aws_region  = "us-east-2"   # AWS region to deploy resources

# ===========================================
# INSTANCE CONFIGURATION
# ===========================================
instance_count    = 2      # Number of EC2 instances (1-5)
enable_monitoring = true    # Enable detailed CloudWatch monitoring

# Instance types per environment (automatically selected)
instance_types = {
  dev     = "t2.micro"   # Free tier eligible
  staging = "t2.small"
  prod    = "t3.small"
}

# ===========================================
# NETWORKING CONFIGURATION
# ===========================================
create_vpc = true              # Create custom VPC or use default
vpc_cidr   = "10.0.0.0/16"    # VPC CIDR block

subnet_cidrs = [              # Subnet CIDR blocks
  "10.0.1.0/24",
  "10.0.2.0/24"
]

availability_zones = [        # AZs to use for subnets
  "us-east-2a",
  "us-east-2b"
]

enable_dns_hostnames = true   # Enable DNS hostnames in VPC
enable_dns_support   = true   # Enable DNS resolution in VPC

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
database_config = {
  engine            = "postgres"     # mysql or postgres
  engine_version    = "13.7"         # Database engine version
  instance_class    = "db.t3.micro"  # RDS instance type
  allocated_storage = 20             # Storage in GB (20-100)
  multi_az          = false          # Multi-AZ deployment
}

# Database password (sensitive)
# Note: In production, use environment variables or AWS Secrets Manager
db_password = "ChangeThisPassword123!"

# ===========================================
# PROJECT CONFIGURATION
# ===========================================
project_name = "terraform-lab2"  # Project identifier

# Common tags applied to all resources
common_tags = {
  Lab         = "2"
  Course      = "Terraform"
  Topic       = "Variables and Data Sources"
  ManagedBy   = "Terraform"
  Environment = "Training"
  CostCenter  = "Education"
  Owner       = "Student"
}

